<%% content_for(:title, "Orders Management") %>

<div class="container-lg">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
    <div>
      <h1 class="text-3xl font-bold text-primary">Orders Management</h1>
      <p class="text-secondary mt-1">Manage and track all customer orders</p>
    </div>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-primary/20">
            <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-secondary">Total Orders</p>
            <p class="text-2xl font-semibold text-primary"><%%= @stats[:total_orders] %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-success/20">
            <svg class="w-6 h-6 text-success" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-secondary">Paid Orders</p>
            <p class="text-2xl font-semibold text-primary"><%%= @stats[:paid_orders] %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-warning/20">
            <svg class="w-6 h-6 text-warning" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-secondary">Pending Orders</p>
            <p class="text-2xl font-semibold text-primary"><%%= @stats[:pending_orders] %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="card-body">
        <div class="flex items-center">
          <div class="p-3 rounded-full bg-success/20">
            <svg class="w-6 h-6 text-success" fill="currentColor" viewBox="0 0 20 20">
              <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
            </svg>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-secondary">Total Revenue</p>
            <p class="text-2xl font-semibold text-primary"><%%= number_to_currency(@stats[:total_revenue]) %></p>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Orders Table -->
  <div class="card">
    <div class="overflow-hidden">
      <%% if @orders.any? %>
        <div class="overflow-x-auto">
          <table class="table">
            <thead class="table-header">
              <tr>
                <th class="table-header-cell">Order</th>
                <th class="table-header-cell">Customer</th>
                <th class="table-header-cell">Product</th>
                <th class="table-header-cell">Amount</th>
                <th class="table-header-cell">Status</th>
                <th class="table-header-cell">Date</th>
                <th class="table-header-cell">Actions</th>
              </tr>
            </thead>
            <tbody>
              <%% @orders.each do |order| %>
                <tr class="table-row">
                  <td class="table-cell">
                    <div class="text-sm font-medium text-primary">#<%%= order.id %></div>
                    <%% if order.stripe_payment_intent_id %>
                      <div class="text-sm text-muted">Has Payment Intent</div>
                    <%% end %>
                  </td>
                  <td class="table-cell">
                    <div class="text-sm font-medium text-primary"><%%= order.customer_name %></div>
                    <div class="text-sm text-secondary"><%%= order.customer_email %></div>
                  </td>
                  <td class="table-cell">
                    <div class="text-sm text-primary"><%%= order.product_name %></div>
                  </td>
                  <td class="table-cell">
                    <div class="text-sm font-medium text-primary">
                      <%%= number_to_currency(order.amount, unit: order.currency.upcase + ' ') %>
                    </div>
                  </td>
                  <td class="table-cell">
                    <span class="<%%= case order.status
                          when 'paid' then 'badge-success'
                          when 'failed' then 'badge-danger'
                          when 'pending' then 'badge-warning'
                          else 'badge-neutral'
                          end %>">
                      <%%= order.display_status %>
                    </span>
                  </td>
                  <td class="table-cell text-secondary">
                    <%%= order.created_at.strftime("%m/%d/%Y") %>
                  </td>
                  <td class="table-cell text-right">
                    <%%= link_to "View", admin_order_path(order), class: "text-primary hover:text-primary-dark" %>
                  </td>
                </tr>
              <%% end %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <%% if @orders.respond_to?(:current_page) %>
          <div class="card-footer">
            <div class="flex justify-center">
              <%%= paginate @orders %>
            </div>
          </div>
        <%% end %>

      <%% else %>
        <div class="text-center py-12">
          <svg class="mx-auto h-12 w-12 text-muted" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="mt-2 text-sm font-medium text-primary">No orders found</h3>
          <p class="mt-1 text-sm text-muted">No orders have been created yet.</p>
        </div>
      <%% end %>
    </div>
  </div>
</div>
