<div class="container-sm flex items-center justify-center min-h-screen py-12">
  <div class="card w-full">
    <div class="card-body text-center">
      <!-- Error Icon -->
      <div class="w-16 h-16 mx-auto mb-4 bg-danger/20 rounded-full flex items-center justify-center">
        <svg class="w-8 h-8 text-danger" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </div>

      <!-- Title -->
      <h1 class="text-2xl font-bold text-primary mb-2">Payment Failed</h1>
      <p class="text-secondary mb-6">Unfortunately, your payment could not be processed.</p>

      <!-- Error Details -->
      <%% if @error_message %>
        <div class="alert-danger mb-6">
          <p class="text-sm">
            <strong>Error:</strong> <%%= @error_message %>
          </p>
        </div>
      <%% end %>

      <!-- Order Details -->
      <%% if @order %>
        <div class="card-flat mb-6 text-left">
          <div class="card-body">
            <h3 class="font-semibold text-primary mb-3">Order Details</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between">
                <span class="text-secondary">Order ID:</span>
                <span class="font-medium text-primary">#<%%= @order.id %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-secondary">Product:</span>
                <span class="font-medium text-primary"><%%= @order.product_name %></span>
              </div>
              <div class="flex justify-between">
                <span class="text-secondary">Amount:</span>
                <span class="font-medium text-primary"><%%= number_to_currency(@order.amount, unit: @order.currency.upcase + ' ') %></span>
              </div>
            </div>
          </div>
        </div>
      <%% end %>

      <!-- Action Buttons -->
      <div class="space-y-3">
        <%% if @order %>
          <% if @for_test %>
          <%%= link_to "Try Payment Again", new_order_path, class: "btn-primary w-full btn-lg" %>
          <% else %>
          <%%= link_to "Try Payment Again", pay_order_path(@order), class: "btn-primary w-full btn-lg", method: :get %>
          <% end %>
          <%%= link_to "View Order Details", @order, class: "btn-ghost w-full" %>
        <%% else %>
          <% if @for_test %>
          <%%= link_to "Create New Order", new_order_path, class: "btn-primary w-full" %>
          <% else %>
          <%%= link_to "Back to Orders", orders_path, class: "btn-primary w-full" %>
          <% end %>
        <%% end %>
      </div>

      <!-- Help Text -->
      <div class="mt-6 text-xs text-muted">
        <p>If you continue to experience issues, please contact our support team.</p>
      </div>
    </div>
  </div>
</div>