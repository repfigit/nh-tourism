<div class="container-lg py-12">
    <h1 class="text-3xl font-bold text-primary mb-8">Active Sessions</h1>

    <div class="space-y-4">
      <% Current.user.sessions.order(created_at: :desc).each do |session| %>
        <div id="<%= dom_id session %>" class="card">
          <div class="card-body">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <div class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <svg class="w-8 h-8 text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-lg font-medium text-primary mb-2">
                      <%= session.user_agent.present? ? session.user_agent.split(" ").first : "Unknown Device" %>
                      <% if session == Current.session %>
                        <span class="badge-success ml-2">
                          Current Session
                        </span>
                      <% end %>
                    </h3>
                    <p class="text-sm text-secondary mb-1">
                      IP: <span class="font-mono"><%= session.ip_address %></span> â€¢
                      Last active: <%= time_ago_in_words(session.updated_at) %> ago
                    </p>
                    <p class="text-sm text-muted">
                      Created: <%= session.created_at.strftime("%B %d, %Y at %l:%M %p") %>
                    </p>
                  </div>
                </div>
              </div>
              <% unless session == Current.session %>
                <div class="flex-shrink-0">
                  <%= button_to "Log out", destroy_one_session_path(id: session.id), method: :delete,
                      class: "btn-danger btn-sm",
                      data: { confirm: "Are you sure you want to sign out this session?" } %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-8 text-center">
      <%= link_to "Back to Profile", profile_path, class: "btn-ghost" %>
  </div>
</div>
