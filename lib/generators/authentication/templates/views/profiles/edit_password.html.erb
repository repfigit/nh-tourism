<div class="container-sm py-12">
    <div class="card-elevated">
      <div class="card-body">
        <h1 class="text-2xl font-bold text-primary mb-8">Change Password</h1>

        <%= form_with model: @user, url: update_password_profile_path, method: :patch, local: true, class: "space-y-6" do |form| %>
          <%= render 'shared/form_error_message', model: @user %>

          <div>
            <%= form.label :current_password, class: "form-label" do %>
              Current Password
            <% end %>
            <%= form.password_field :current_password, required: true, autocomplete: "current-password", class: "form-input" %>
            <div class="form-help">
              Please enter your current password to confirm identity
            </div>
          </div>

          <hr>

          <div>
            <%= form.label :password, class: "form-label" do %>
              New Password
            <% end %>
            <%= form.password_field :password, required: true, autocomplete: "new-password", class: "form-input" %>
            <% if @user.errors[:password].any? %>
              <div class="form-error">
                <%= @user.errors[:password].first %>
              </div>
            <% else %>
              <div class="form-help">
                At least <%= User::MIN_PASSWORD %> characters
              </div>
            <% end %>
          </div>

          <div>
            <%= form.label :password_confirmation, class: "form-label" do %>
              Confirm New Password
            <% end %>
            <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "form-input" %>
            <% if @user.errors[:password_confirmation].any? %>
              <div class="form-error">
                <%= @user.errors[:password_confirmation].first %>
              </div>
            <% else %>
              <div class="form-help">
                Please re-enter your new password
              </div>
            <% end %>
          </div>

          <div class="alert-warning">
            <div class="flex">
              <svg class="w-5 h-5 text-warning mr-3 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
              </svg>
              <p class="text-sm">
                <strong>Important:</strong> You will be signed out of all your other devices after changing your password.
              </p>
            </div>
          </div>

          <div class="pt-4">
            <div class="flex justify-end space-x-3">
              <%= form.submit "Update Password", class: "btn-primary" %>
              <%= link_to "Cancel", profile_path, class: "btn-ghost" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
