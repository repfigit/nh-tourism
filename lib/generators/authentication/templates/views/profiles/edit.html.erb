<div class="container-sm py-12">
    <div class="card-elevated">
      <div class="card-body">
        <h1 class="text-2xl font-bold text-primary mb-8">Edit Profile</h1>

        <%= form_with model: @user, url: profile_path, method: :patch, local: true, class: "space-y-6" do |form| %>
          <%= render 'shared/form_error_message', model: @user %>

          <div>
            <%= form.label :name, class: "form-label" do %>
              Name
            <% end %>
            <%= form.text_field :name, required: true, autocomplete: "name", class: "form-input" %>
            <% if @user.errors[:name].any? %>
              <div class="form-error">
                <%= @user.errors[:name].first %>
              </div>
            <% end %>
          </div>

          <div>
            <%= form.label :email, class: "form-label" do %>
              Email
            <% end %>
            <%= form.email_field :email, required: true, autocomplete: "email", class: "form-input" %>
            <% if @user.errors[:email].any? %>
              <div class="form-error">
                <%= @user.errors[:email].first %>
              </div>
            <% else %>
              <div class="form-help">
                Email verification required after changes
              </div>
            <% end %>
          </div>

          <div class="pt-4">
            <div class="flex justify-end space-x-3">
              <%= form.submit "Save Changes", class: "btn-primary" %>
              <%= link_to "Cancel", profile_path, class: "btn-ghost" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>
