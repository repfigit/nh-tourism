<div class="container mx-auto px-4 py-12">
  <h1 class="text-4xl font-bold text-text-primary mb-8">New Hampshire Attractions</h1>
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @attractions.each do |attraction| %>
      <div class="card p-6">
        <div class="relative h-48 mb-4 rounded-lg overflow-hidden">
          <img src="<%= attraction.image_url %>" alt="<%= attraction.name %>" class="w-full h-full object-cover">
        </div>
        <span class="badge-secondary mb-3"><%= attraction.category %></span>
        <h3 class="text-xl font-bold text-text-primary mb-2"><%= attraction.name %></h3>
        <p class="text-text-muted text-sm mb-2"><%= attraction.location %></p>
        <p class="text-text-secondary"><%= attraction.description %></p>
      </div>
    <% end %>
  </div>
  
  <div class="mt-8">
    <%= paginate @attractions %>
  </div>
</div>
