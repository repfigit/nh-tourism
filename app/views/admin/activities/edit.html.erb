<% content_for :title, "Edit Activity" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_activity_path(@activity.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Activity
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Edit Activity</h1>
  </div>

  <!-- Form -->
  <div class="card">
    <div class="card-body">
      <%= form_with model: [:admin, @activity], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @activity %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@activity, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@activity, :name) ? { required: true } : {}) %>
          <% if @activity.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@activity, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@activity, :description) ? { required: true } : {}) %>
          <% if @activity.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Duration -->
        <div class="mb-4">
          <%= form.label :duration, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Duration<% if field_required?(@activity, :duration) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :duration, {
            placeholder: "Enter duration...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@activity, :duration) ? { required: true } : {}) %>
          <% if @activity.errors[:duration].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:duration].first %></p>
          <% end %>
        </div>

        <!-- Difficulty -->
        <div class="mb-4">
          <%= form.label :difficulty, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Difficulty<% if field_required?(@activity, :difficulty) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :difficulty, {
            placeholder: "Enter difficulty...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@activity, :difficulty) ? { required: true } : {}) %>
          <% if @activity.errors[:difficulty].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:difficulty].first %></p>
          <% end %>
        </div>

        <!-- Slug -->
        <div class="mb-4">
          <%= form.label :slug, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Slug<% if field_required?(@activity, :slug) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :slug, {
            placeholder: "Enter slug...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@activity, :slug) ? { required: true } : {}) %>
          <% if @activity.errors[:slug].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @activity.errors[:slug].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_activity_path(@activity.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Activity", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>