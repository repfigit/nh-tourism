<% content_for :title, "Edit Destination" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_destination_path(@destination.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Destination
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Edit Destination</h1>
  </div>

  <!-- Form -->
  <div class="card">
    <div class="card-body">
      <%= form_with model: [:admin, @destination], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @destination %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@destination, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@destination, :name) ? { required: true } : {}) %>
          <% if @destination.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @destination.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Location -->
        <div class="mb-4">
          <%= form.label :location, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Location<% if field_required?(@destination, :location) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :location, {
            placeholder: "Enter location...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@destination, :location) ? { required: true } : {}) %>
          <% if @destination.errors[:location].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @destination.errors[:location].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@destination, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@destination, :description) ? { required: true } : {}) %>
          <% if @destination.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @destination.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Featured -->
        <div class="mb-4">
          <label class="flex items-center cursor-pointer">
            <%= form.check_box :featured,
                  class: "mr-3 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-700" %>
            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Featured</span>
          </label>
        </div>

        <!-- Image url -->
        <div class="mb-4">
          <%= form.label :image_url, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Image url<% if field_required?(@destination, :image_url) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :image_url, {
            placeholder: "Enter image url...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@destination, :image_url) ? { required: true } : {}) %>
          <% if @destination.errors[:image_url].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @destination.errors[:image_url].first %></p>
          <% end %>
        </div>

        <!-- Slug -->
        <div class="mb-4">
          <%= form.label :slug, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Slug<% if field_required?(@destination, :slug) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :slug, {
            placeholder: "Enter slug...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@destination, :slug) ? { required: true } : {}) %>
          <% if @destination.errors[:slug].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @destination.errors[:slug].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_destination_path(@destination.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Destination", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>