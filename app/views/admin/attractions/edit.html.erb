<% content_for :title, "Edit Attraction" %>

<div class="container-md">
  <!-- Page Title -->
  <div class="flex items-center space-x-4 mb-6">
    <%= link_to admin_attraction_path(@attraction.id), class: "btn-ghost text-sm py-1 px-3" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Back to Attraction
    <% end %>
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Edit Attraction</h1>
  </div>

  <!-- Form -->
  <div class="card">
    <div class="card-body">
      <%= form_with model: [:admin, @attraction], local: true, class: "space-y-6" do |form| %>
        <%= render 'shared/form_error_message', model: @attraction %>

        <!-- Name -->
        <div class="mb-4">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Name<% if field_required?(@attraction, :name) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :name, {
            placeholder: "Enter name...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@attraction, :name) ? { required: true } : {}) %>
          <% if @attraction.errors[:name].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:name].first %></p>
          <% end %>
        </div>

        <!-- Location -->
        <div class="mb-4">
          <%= form.label :location, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Location<% if field_required?(@attraction, :location) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :location, {
            placeholder: "Enter location...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@attraction, :location) ? { required: true } : {}) %>
          <% if @attraction.errors[:location].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:location].first %></p>
          <% end %>
        </div>

        <!-- Description -->
        <div class="mb-4">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Description<% if field_required?(@attraction, :description) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_area :description, {
            rows: 5,
            placeholder: "Enter description...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@attraction, :description) ? { required: true } : {}) %>
          <% if @attraction.errors[:description].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:description].first %></p>
          <% end %>
        </div>

        <!-- Category -->
        <div class="mb-4">
          <%= form.label :category, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Category<% if field_required?(@attraction, :category) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :category, {
            placeholder: "Enter category...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@attraction, :category) ? { required: true } : {}) %>
          <% if @attraction.errors[:category].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:category].first %></p>
          <% end %>
        </div>

        <!-- Image url -->
        <div class="mb-4">
          <%= form.label :image_url, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Image url<% if field_required?(@attraction, :image_url) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :image_url, {
            placeholder: "Enter image url...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@attraction, :image_url) ? { required: true } : {}) %>
          <% if @attraction.errors[:image_url].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:image_url].first %></p>
          <% end %>
        </div>

        <!-- Slug -->
        <div class="mb-4">
          <%= form.label :slug, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
            Slug<% if field_required?(@attraction, :slug) %> <span class="text-red-500">*</span><% end %>
          <% end %>
          <%= form.text_field :slug, {
            placeholder: "Enter slug...",
            class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white"
          }.merge(field_required?(@attraction, :slug) ? { required: true } : {}) %>
          <% if @attraction.errors[:slug].any? %>
            <p class="text-sm text-red-500 mt-1"><%= @attraction.errors[:slug].first %></p>
          <% end %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_attraction_path(@attraction.id), class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Attraction", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>