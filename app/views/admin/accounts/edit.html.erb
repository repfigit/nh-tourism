<% content_for :title do %>
  Account Settings
<% end %>

<!-- Breadcrumb -->
<div class="container-xl">
  <div class="text-sm text-gray-600 dark:text-gray-300 mb-6">
    <ol class="flex space-x-2">
      <li><%= link_to "Dashboard", admin_root_path, class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" %></li>
      <li class="text-gray-400 dark:text-gray-500">/</li>
      <li>Account Settings</li>
    </ol>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Personal Information Card -->
    <div class="lg:col-span-2">
      <div class="card">
        <div class="card-body">
          <h2 class="text-2xl font-semibold mb-6 flex items-center text-gray-900 dark:text-gray-100">
            <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"/>
            </svg>
            Personal Information
          </h2>

          <%= form_with model: current_admin, url: admin_account_path, class: "space-y-6" do |f| %>
            <!-- Name Field -->
            <div class="mb-4">
              <%= f.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
                Full Name <span class="text-red-500">*</span>
              <% end %>
              <%= f.text_field :name,
                  placeholder: "Enter your full name",
                  class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white #{current_admin.errors[:name].any? ? 'border-red-500' : ''}" %>
              <% if current_admin.errors[:name].any? %>
                <p class="text-sm text-red-500 mt-1 flex items-center">
                  <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <%= current_admin.errors[:name].first %>
                </p>
              <% end %>
            </div>

            <!-- Current Password Field -->
            <div class="mb-4">
              <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
                Current Password <span class="text-red-500">*</span>
              <% end %>
              <%= f.password_field :current_password,
                  placeholder: "Enter current password",
                  class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white #{current_admin.errors[:current_password].any? ? 'border-red-500' : ''}" %>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Required for security verification</p>
              <% if current_admin.errors[:current_password].any? %>
                <p class="text-sm text-red-500 mt-1 flex items-center">
                  <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <%= current_admin.errors[:current_password].first %>
                </p>
              <% end %>
            </div>

            <!-- New Password Field -->
            <div class="mb-4">
              <%= f.label :password, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
                New Password
              <% end %>
              <%= f.password_field :password,
                  placeholder: "Enter new password (optional)",
                  class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white #{current_admin.errors[:password].any? ? 'border-red-500' : ''}" %>
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">Leave blank to keep current password</p>
              <% if current_admin.errors[:password].any? %>
                <p class="text-sm text-red-500 mt-1 flex items-center">
                  <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <%= current_admin.errors[:password].first %>
                </p>
              <% end %>
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-4">
              <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" do %>
                Confirm New Password
              <% end %>
              <%= f.password_field :password_confirmation,
                  placeholder: "Confirm your new password",
                  class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-blue-500 focus:border-blue-500 bg-white dark:bg-gray-700 dark:text-white #{current_admin.errors[:password_confirmation].any? ? 'border-red-500' : ''}" %>
              <% if current_admin.errors[:password_confirmation].any? %>
                <p class="text-sm text-red-500 mt-1 flex items-center">
                  <svg class="inline w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                  <%= current_admin.errors[:password_confirmation].first %>
                </p>
              <% end %>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-end space-x-4">
              <%= link_to admin_root_path, class: "btn-ghost" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
                Cancel
              <% end %>
              <%= f.submit "Update Account", class: "btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Security Information Card -->
    <div>
      <div class="card">
        <div class="card-body">
          <h2 class="text-xl font-semibold mb-4 flex items-center text-gray-900 dark:text-gray-100">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 01 6 0z" clip-rule="evenodd"/>
            </svg>
            Security
          </h2>

          <div class="space-y-4">
            <!-- Account Status -->
            <div class="flex items-center p-3 bg-green-50 dark:bg-green-900/30 rounded-lg border border-green-200 dark:border-green-800">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-green-800 dark:text-green-300">Account Active</p>
                <p class="text-xs text-green-600 dark:text-green-400">Your account is active and secure</p>
              </div>
            </div>

            <!-- Last Login -->
            <div class="flex items-center p-3 bg-blue-50 dark:bg-blue-900/30 rounded-lg border border-blue-200 dark:border-blue-800">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
                  <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-blue-800 dark:text-blue-300">Last Login</p>
                <p class="text-xs text-blue-600 dark:text-blue-400">Today at <%= Time.current.strftime("%H:%M") %></p>
              </div>
            </div>

            <!-- Security Tip -->
            <div class="flex items-center p-3 bg-yellow-50 dark:bg-yellow-900/30 rounded-lg border border-yellow-200 dark:border-yellow-800">
              <div class="flex-shrink-0">
                <svg class="w-6 h-6 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-yellow-800 dark:text-yellow-300">Security Reminder</p>
                <p class="text-xs text-yellow-600 dark:text-yellow-400">Update your password regularly</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
