<!-- Hero Section -->
<div class="relative h-screen bg-gradient-to-b from-primary/10 to-surface overflow-hidden">
  <div class="absolute inset-0" style="background-image: url('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1920'); background-size: cover; background-position: center; opacity: 0.4;"></div>
  
  <div class="relative z-10 container mx-auto px-4 h-full flex flex-col justify-center items-center text-center">
    <h1 class="text-5xl md:text-7xl font-bold text-text-primary mb-6">
      Discover New Hampshire
    </h1>
    <p class="text-xl md:text-2xl text-text-secondary mb-8 max-w-3xl">
      Experience the breathtaking beauty of the White Mountains, pristine lakes, and charming New England towns
    </p>
    <div class="flex flex-wrap gap-4 justify-center">
      <%= link_to "Explore Destinations", destinations_path, class: "btn-primary px-8 py-4 text-lg" %>
      <%= link_to "View Activities", activities_path, class: "btn-secondary px-8 py-4 text-lg" %>
    </div>
  </div>

  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</div>

<!-- Featured Destinations -->
<section class="py-20 bg-surface">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">
        Popular Destinations
      </h2>
      <p class="text-lg text-text-secondary max-w-2xl mx-auto">
        From mountain peaks to coastal shores, discover the diverse landscapes that make New Hampshire unforgettable
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @featured_destinations.each do |destination| %>
        <div class="card overflow-hidden group">
          <div class="relative h-64 bg-primary/10 overflow-hidden">
            <img src="<%= destination.image_url %>" 
                 alt="<%= destination.name %>" 
                 class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110">
          </div>
          <div class="p-6">
            <h3 class="text-2xl font-bold text-text-primary mb-2"><%= destination.name %></h3>
            <p class="text-text-muted text-sm mb-2"><%= destination.location %></p>
            <p class="text-text-secondary mb-4">
              <%= destination.description.truncate(120) %>
            </p>
            <%= link_to destination_path(destination), class: "text-primary hover:text-primary-dark font-semibold inline-flex items-center" do %>
              Learn More
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="text-center mt-12">
      <%= link_to "View All Destinations", destinations_path, class: "btn-primary px-8 py-3" %>
    </div>
  </div>
</section>

<!-- Featured Attractions -->
<section class="py-20 bg-gradient-to-br from-primary/5 to-secondary/5">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">
        Must-See Attractions
      </h2>
      <p class="text-lg text-text-secondary max-w-2xl mx-auto">
        Discover the iconic landmarks and hidden gems that make New Hampshire special
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
      <% @attractions.each do |attraction| %>
        <div class="bg-surface-elevated rounded-xl p-6 text-center shadow-md hover:shadow-xl transition-shadow">
          <div class="relative h-48 mb-4 rounded-lg overflow-hidden">
            <img src="<%= attraction.image_url %>" 
                 alt="<%= attraction.name %>" 
                 class="w-full h-full object-cover">
          </div>
          <span class="badge-secondary mb-3"><%= attraction.category %></span>
          <h3 class="text-xl font-bold text-text-primary mb-2"><%= attraction.name %></h3>
          <p class="text-text-secondary text-sm">
            <%= attraction.description.truncate(80) %>
          </p>
        </div>
      <% end %>
    </div>

    <div class="text-center mt-12">
      <%= link_to "Explore All Attractions", attractions_path, class: "btn-secondary px-8 py-3" %>
    </div>
  </div>
</section>

<!-- Activities Section -->
<section class="py-20 bg-surface">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-text-primary mb-4">
        Adventures Await
      </h2>
      <p class="text-lg text-text-secondary max-w-2xl mx-auto">
        From relaxing lake cruises to challenging mountain hikes, find your perfect adventure
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @activities.each do |activity| %>
        <div class="card p-6">
          <div class="flex items-start justify-between mb-4">
            <div>
              <h3 class="text-xl font-bold text-text-primary mb-1"><%= activity.name %></h3>
              <div class="flex gap-2 mt-2">
                <span class="badge-info text-xs"><%= activity.duration %></span>
                <span class="badge-<%= activity.difficulty == 'Easy' ? 'success' : activity.difficulty == 'Moderate' ? 'warning' : 'danger' %> text-xs">
                  <%= activity.difficulty %>
                </span>
              </div>
            </div>
          </div>
          <p class="text-text-secondary">
            <%= activity.description %>
          </p>
        </div>
      <% end %>
    </div>

    <div class="text-center mt-12">
      <%= link_to "View All Activities", activities_path, class: "btn-primary px-8 py-3" %>
    </div>
  </div>
</section>

<!-- Call to Action -->
<section class="py-20 bg-gradient-to-r from-primary to-primary-dark text-white">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-4xl md:text-5xl font-bold mb-6">
      Start Planning Your Adventure
    </h2>
    <p class="text-xl mb-8 max-w-2xl mx-auto opacity-90">
      Whether you're seeking outdoor thrills, peaceful retreats, or cultural experiences, New Hampshire has it all
    </p>
    <div class="flex flex-wrap gap-4 justify-center">
      <%= link_to "Explore Destinations", destinations_path, class: "bg-white text-primary hover:bg-surface px-8 py-4 rounded-lg font-semibold text-lg transition-colors shadow-lg" %>
      <%= link_to "View Activities", activities_path, class: "bg-secondary hover:bg-secondary-dark text-white px-8 py-4 rounded-lg font-semibold text-lg transition-colors shadow-lg" %>
    </div>
  </div>
</section>
