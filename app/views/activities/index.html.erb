<div class="container mx-auto px-4 py-12">
  <h1 class="text-4xl font-bold text-text-primary mb-8">Activities & Adventures</h1>
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @activities.each do |activity| %>
      <div class="card p-6">
        <h3 class="text-xl font-bold text-text-primary mb-3"><%= activity.name %></h3>
        <div class="flex gap-2 mb-4">
          <span class="badge-info text-xs"><%= activity.duration %></span>
          <span class="badge-<%= activity.difficulty == 'Easy' ? 'success' : activity.difficulty == 'Moderate' ? 'warning' : 'danger' %> text-xs">
            <%= activity.difficulty %>
          </span>
        </div>
        <p class="text-text-secondary"><%= activity.description %></p>
      </div>
    <% end %>
  </div>
  
  <div class="mt-8">
    <%= paginate @activities %>
  </div>
</div>
