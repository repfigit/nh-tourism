<div class="container mx-auto px-4 py-12">
  <h1 class="text-4xl font-bold text-text-primary mb-8">Explore New Hampshire Destinations</h1>
  
  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @destinations.each do |destination| %>
      <div class="card overflow-hidden">
        <div class="relative h-64 bg-primary/10">
          <img src="<%= destination.image_url %>" alt="<%= destination.name %>" class="w-full h-full object-cover">
        </div>
        <div class="p-6">
          <h3 class="text-2xl font-bold text-text-primary mb-2"><%= destination.name %></h3>
          <p class="text-text-muted text-sm mb-2"><%= destination.location %></p>
          <p class="text-text-secondary mb-4"><%= destination.description.truncate(150) %></p>
          <%= link_to "Learn More", destination_path(destination), class: "btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="mt-8">
    <%= paginate @destinations %>
  </div>
</div>
